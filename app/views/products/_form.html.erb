<% if @product.errors.any? %>
  <div class="alert alert-danger">
    <h4>エラーがあります</h4>
    <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: product do |form| %>
  <div class="mb-2 mx-5">
    <%= form.label :name, class: "form-label fs-4" %>
    <%= form.text_field :name, class: "form-control fs-4", placeholder: "名無し" %>
  </div>
  <div class="mb-2 mx-5">
    <%= form.label :content, class: "form-label fs-4" %> 
    <%= form.text_area :content, class: "form-control fs-4", rows: 4 ,placeholder: "いまどうしてる？"  %>
  </div>

  <div class= "mb-2 mx-5 ">
    <%= form.submit "投稿",class: "btn btn-primary btn-lg" %>
  </div>
<% end %>